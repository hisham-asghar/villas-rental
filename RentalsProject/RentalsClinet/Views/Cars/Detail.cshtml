@{
    ViewBag.Title = "Detail";
    ViewBag.UploadLocation = RentalsClinet.Helpers.CustomActions.getUploadLocation();  
}
@section headScripts{
    <link href="~/Content/ZoomSlider/bannerscollection_zoominout.css" rel="stylesheet" type="text/css">
    <link href="~/Content/ZoomSlider/text_classes.css" rel="stylesheet" type="text/css">
    <link href="~/Content/ZoomSlider/css3animations.css" rel="stylesheet" type="text/css">

    <link href='https://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    <script src="~/Content/ZoomSlider/js/jquery.touchSwipe.min.js" type="text/javascript"></script>
    <script src="~/Content/ZoomSlider/js/bannerscollection_zoominout.js" type="text/javascript"></script>

    <script>

        jQuery(function () {
            jQuery("#bannerscollection_zoominout_1").bannerscollection_zoominout({
                skin: "generous",
                width: 1920,
                height: 600,
                width100Proc: true,
                height100Proc: true,
                responsive: true,
                responsiveRelativeToBrowser: true,
                setAsBg: false,
                autoPlay: 11,
                loop: true,
                fadeSlides: true,
                horizontalPosition: "center",
                verticalPosition: "center",
                initialZoom: 1,
                finalZoom: 1,
                duration: 30,
                durationIEfix: 5,
                zoomEasing: "ease",
                target: "_blank",
                pauseOnMouseOver: false,
                showAllControllers: true,
                showNavArrows: true,
                showOnInitNavArrows: true,
                autoHideNavArrows: true,
                showBottomNav: true,
                showOnInitBottomNav: true,
                autoHideBottomNav: true,
                showPreviewThumbs: true,
                enableTouchScreen: true,
                absUrl: "",
                scrollSlideDuration: 0.8,
                scrollSlideEasing: "swing",
                defaultEasing: "swing",
                myloaderTime: 1,
                showCircleTimer: true,
                circleRadius: 13,
                circleLineWidth: 2,
                circleColor: "#ffffff",
                circleAlpha: 100,
                behindCircleColor: "##ffffff",
                behindCircleAlpha: 20,
                numberOfThumbsPerScreen: 0,
                thumbsWrapperMarginTop: -110,
                thumbsOnMarginTop: 10,
                defaultExitLeft: 0,
                defaultExitTop: 0,
                defaultExitFade: 1,
                defaultExitDuration: 0,
                defaultExitDelay: 0,
                defaultExitEasing: "swing",
                defaultExitOFF: true
            });
        });
    </script>
}
<style>
    .contentHolderUnit img {
        width: 100% !important;
        height: 100% !important;
        left: 0 !important;
    }

    .contentHolderVisibleWrapper {
        background-position: center center;
        background-size: cover;
    }
</style>
@model CustomModels.Cars.CarModelDetail

<div class="page-header header-filter clear-filter" style="background: rgba(0, 0, 0, 0.68); height: 40vh;">
    <div class="container" style="padding-top: 15vh;">
        <div class="row">
            <div class="col-md-8 col-md-offset-2" style="text-align: center;">
                <div class="brand">
                    <h1>
                        @Model.name
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .description__ p {
        font-size: 16px;
    }
</style>
<div id="bannerscollection_zoominout_1" style="">
    <div class="myloader"></div>
    <ul class="bannerscollection_zoominout_list">
        @foreach (var im in Model.images)
        {
            <li data-text-id="" data-video="false" data-bottom-thumb="@(ViewBag.UploadLocation + "thumbs/" + im.Substring(0,im.LastIndexOf(".", StringComparison.Ordinal)) + "80x80.jpg")"
                data-link="" data-target="" data-horizontalposition="center" data-verticalposition="center"
                data-initialzoom="0.8" data-finalzoom="1" data-duration="" data-zoomeasing="">
                <img title="" src="@(ViewBag.UploadLocation + im)">
            </li>
        }
    </ul>
</div>
<div class="container" style="padding: 5% 0;">
    <div class="row">
        <div class="col-md-7 description__">
            <p><strong>@Model.name</strong></p>
            <p>
                @Html.Raw(Model.description)&hellip; 
            </p>
            <p>&nbsp;</p>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <div class="row">
                <h3 style="font-weight: bold;"> Specifications </h3>
                <table class="table table-condensed table-responsive table-striped">
                    <tbody>
                    @foreach (var sp in Model.specs)
                    {
                        <tr>
                            <td>@sp.Name</td>
                            <th>@sp.Value</th>
                        </tr>   
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="cd-section">
    <div class="section-image" style="padding-top: 5%;background: rgba(0, 0, 0, 0);">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-md-offset-1">
                    <div class="row" style="color: #fff;">
                        <h3 style="font-weight: bold;"> Rental Details </h3>
                        <table class="table table-condensed table-responsive ">
                            <tbody>
                                <tr>
                                    <td>Daily Rental</td>
                                    <th>$@string.Format("{0:0.00}", Model.priceOneDay)</th>
                                </tr>
                                <tr>
                                    <td>3 Days Rental</td>
                                    <th>$@string.Format("{0:0.00}", Model.priceThreeDays)</th>
                                </tr>
                                <tr>
                                    <td>Weekly Rental</td>
                                    <th>$@string.Format("{0:0.00}", Model.priceWeek)</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <div class="card card-contact">
                        <form role="form" id="contact-form" method="post">
                            <div class="header header-raised header-primary text-center">
                                <h4 class="card-title">Inquiry</h4>
                            </div>
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label">First name</label>
                                            <input type="text" name="name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Last name</label>
                                            <input type="text" name="name" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Phone</label>
                                            <input type="tel" name="tel" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Email</label>
                                            <input type="email" name="email" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label">$ Budget</label>
                                            <input type="text" name="budget" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group label-floating">
                                            <label class="control-label"></label>
                                            <input type="date" name="name" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group label-floating">
                                    <label class="control-label">Your message</label>
                                    <textarea name="message" class="form-control" id="message" rows="6"></textarea>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-primary pull-right">Send Message</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>