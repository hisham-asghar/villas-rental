    min-width: 97vw;
    width: 97vw;
    padding-left: 1.5vw;
     }
</style>

<style>
    .affix {
        top: 0;
        width: 100%;
    }

        .affix + .page-header.header-filter {
            padding-top: 70px;
        }
</style>
<script>
    $(document).ready(function () {
        $('#sectionsNav').affix({
            offset: {
                top: $('.page-header.header-filter').height()
            }
        });
    });
</script>


<div class="cd-section" id="headers">
    <div class="header-2">
        <div class="page-header header-filter" style="height: 30vh; min-height: 30vh;">
            <div class="container-fluid">
                <div class="container" style="padding-top:17vh;">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            @if (ViewBag.city != null)
                            {
                                <h1 class="title">
                                    @ViewBag.city.CityName
                                </h1>    
                            }
                            else if (ViewBag.filter != null)
                            {
                                <h1 class="title">
                                    @ViewBag.filter.TagName
                                </h1>    
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("~/Views/Shared/SearchNavigationBar.cshtml") 
    </div>
</div>
<div class="section-space hide"></div>
