                </div>
            </div>
        </div>
    </div>
</div>
    </div>

@section scripts{
<script>
    $(document).ready(function() {
        $(".property_box").each(function() {
            $(this).click(function () {
                var link = $(this).attr("link");
                var city = $(this).attr("city");
                location.href = "/"+ city +"/" + link;
            });
        });        
    });
</script>
}
