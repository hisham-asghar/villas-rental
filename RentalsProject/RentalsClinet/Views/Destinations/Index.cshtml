<div class="container map-part" style="padding:0;">
<div class="row">
    <div class="nav-align-center">
        <ul class="nav nav-pills nav-pills-icons" role="tablist">
            <li class="active">
                <a href="#work" role="tab" data-toggle="tab">
                    <i class="material-icons">dashboard</i>
                    City View
                </a>
            </li>
            <li>
                <a href="#connections" id="mapLinkShow" role="tab" data-toggle="tab">
                    <i class="material-icons">location_on</i>
                    Map View
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="tab-content">
    <div class="tab-pane active work" id="work">
        <div class="content" style="min-height:100vh;">
            <div class="row">
                <div class="col-md-12">
                    @if(Model.Count == 0)
                    {
                        <h5 class="title desc" style="padding-left: 5vw;padding-top: 2vw;">
                            There is no such villa to be shown.
                        </h5>
                    }
                    @foreach (var property in Model)
                    {
                        @Html.Partial("~/Views/Shared/VillaItemBox.cshtml", property)
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane connections" id="connections">
        <div class="row">
            <div id="account-container">
                <div id="wrapper-map">
                    <div id="content">
                        <section>
                            <div id="map" class="gmap map-boxed card"></div>
