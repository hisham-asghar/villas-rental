<div class="content" style="height:100vh;">
    <div class="container-fluid">
        <div class="col-md-12">
            @foreach (var property in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card property_box">
                        <div class="card-actions hide pull-right" style="position: absolute; right: 5%; top: 5%; color: #555; z-index: 10;">
                            <div class="stats" style="padding: 10px; border-radius: 500px; font-size: 32px; background: #ccc;">
                                <i class="material-icons" style="font-size: 32px;">favorite</i>
                            </div>
                        </div>
                        <div class="card-image" style="width: 100%; margin: 0;">
                            <a href="/Destinations/Detail?id=@property.propertyid">
                                <img class="img" src="@ViewBag.UploadLocation/@property.banner">
                                <div class="card-title">
                                    @property.propertyname
                                    <div class="h6">@property.city, @property.country</div>
                                </div>
                            </a>
                        </div>
                        <div class="content">
                            <div class="footer">
                                <div class="price">
                                    <h4 style="margin: 0; font-weight: bold;">$@(property.rates.Count > 0 ? property.rates.Sum(p => p.price) * 100 / property.rates.Count : 0)/night</h4>
                                </div>
                                <div class="author" style="float: right; line-height: 30px; color: #999999;">
                                    <a href="#">
                                        <i class="material-icons">group</i>
                                        @property.maxguests
                                    </a>
                                    &nbsp;
                                    <a href="#">
                                        <i class="material-icons">
                                            <svg style="width: 24px; height: 24px" viewBox="0 0 24 24">
                                                <path fill="#000000" d="M19,7H11V14H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z" />
                                            </svg>
                                        </i>
                                        14
                                    </a>
                                    <br />
                                    <a href="#" class="ratings">
                                        <i class="material-icons">star</i>
                                        <i class="material-icons">star</i>
                                        <i class="material-icons">star</i>
                                        <i class="material-icons">star</i>
                                        <i class="material-icons">star</i>
                                        (7 Reviews)
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@model List<CustomModels.PropertiesModelGetter>
@section scripts{
    <script>
        $(document).ready(function() {
            $(".property_box").each(function() {
                $(this).click(function() {
                    var id = $(this).attr("propertyId");
                    location.href = "/Destinations/Detail?id=" + id;
                });
            });
        });
    </script>
}