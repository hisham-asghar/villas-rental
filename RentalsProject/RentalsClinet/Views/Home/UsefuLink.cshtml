@{
    ViewBag.Title = ViewBag.HeadTitle;
}
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    string background = null;
    if (ViewBag.HeadTitle == "POLICY")
    {
        background = "Policy.jpg";
    }
}
<nav class="navbar navbar-transparent navbar-absolute">
    @Html.Partial("~/Views/Shared/HeaderNavBar.cshtml")
</nav>
<div class="page-header header-filter" style="height:40vh; min-height: 50vh;@(background == null ? "" : "background-image: url('/Content/assets/img/"+background+"')")">
    <div class="container" style="padding-top:20vh;">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1 class="title">@ViewBag.HeadTitle</h1>
            </div>
        </div>
    </div>
</div>
<style>
    .description p {
        font-size: 16px;
    }
</style>
<div class="main">
    <div class="container" style="height:100vh;">
    </div>
</div>