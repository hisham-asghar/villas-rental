@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout2.cshtml";
    ViewBag.UploadLocation = RentalsClinet.Helpers.CustomActions.getUploadLocation();
}
@model List<Dictionary<string,string>>
<div class="page-header header-filter" style="background-image: url('/Content/assets/img/magzines.jpg');height: 50vh; min-height: 50vh;">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <h1 class="title">
                    Magzines
                </h1>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 section-white-to-gray" style="min-height: 100vh;">

    <div class="col-md-6 col-md-offset-3 section-white-to-gray hide" style="box-shadow: 0px -16px 1px 2px transparent linear-gradient(0deg, #e5e5e5 0%, #fff 100%);    border-top-left-radius: 10px;    margin-top: -3%;    z-index: 1;    padding: 5px;    border-top-right-radius: 10px;    background: transparent linear-gradient(0deg, #f6f6f6 0%, #fcfcfc 100%) repeat scroll 0 0;">
        <ul class="nav nav-pills nav-pills-icons nav-pills-info nav-justified" role="tablist">
            <!--
            color-classes: "nav-pills-primary", "nav-pills-info", "nav-pills-success", "nav-pills-warning","nav-pills-danger"
            -->
            <li class="">
                <a href="index.html#dashboard-1" role="tab" data-toggle="tab" aria-expanded="false">
                    <i class="">
                        <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                            <path fill="#000000" d="M3,3A1,1 0 0,0 2,4V8L2,9.5C2,11.19 3.03,12.63 4.5,13.22V19.5A1.5,1.5 0 0,0 6,21A1.5,1.5 0 0,0 7.5,19.5V13.22C8.97,12.63 10,11.19 10,9.5V8L10,4A1,1 0 0,0 9,3A1,1 0 0,0 8,4V8A0.5,0.5 0 0,1 7.5,8.5A0.5,0.5 0 0,1 7,8V4A1,1 0 0,0 6,3A1,1 0 0,0 5,4V8A0.5,0.5 0 0,1 4.5,8.5A0.5,0.5 0 0,1 4,8V4A1,1 0 0,0 3,3M19.88,3C19.75,3 19.62,3.09 19.5,3.16L16,5.25V9H12V11H13L14,21H20L21,11H22V9H18V6.34L20.5,4.84C21,4.56 21.13,4 20.84,3.5C20.63,3.14 20.26,2.95 19.88,3Z"></path>
                        </svg>
                    </i>Food
                </a>
            </li>
            <li class="">
                <a href="index.html#schedule-1" role="tab" data-toggle="tab" aria-expanded="false">
                    <i class="material-icons">airplanemode_active</i>Travel
                </a>
            </li>
            <li class="active">
                <a href="#latest_magzines" role="tab" data-toggle="tab" aria-expanded="true">
                    <i class="material-icons">new_releases</i>
                    Latest
                </a>
            </li>
            <li class="">
                <a href="index.html#tasks-1" role="tab" data-toggle="tab" aria-expanded="false">
                    <i class="material-icons">home</i>Home
                </a>
            </li>
            <li class="">
                <a href="index.html#tasks-1" role="tab" data-toggle="tab" aria-expanded="false">
                    <i class="material-icons">people</i>People
                </a>
            </li>
        </ul>
    </div>
    <style>
        .blog-detail,
        .blog-detail *{
            font-family: arial, helvetica, sans-serif !important;
            font-size: 18.2px !important;
            line-height: 1.55em !important;
        }
        .blog-detail a {
            color:#0086d4
        }
    </style>
    <div class="col-md-10 col-md-offset-1">

        <div class="tab-content tab-space">
            <div class="tab-pane" id="schedule-1">
                Efficiently unleash cross-media information without cross-media value. Quickly maximize timely deliverables for real-time schemas.
                <br><br>Dramatically maintain clicks-and-mortar solutions without functional solutions.
            </div>
            <div class="tab-pane" id="tasks-1">
                
            </div>
            <div class="tab-pane active" id="latest_magzines">
                <h2 class="title">Latest Magzines</h2>
                <br>
                @{
                    var i = 0;
                }
                @foreach (var blog in Model)
                {
                    <div class="card card-plain card-blog">
                        <div class="row">
                            @if (i++ % 2 == 0)
                            {
                                <div class="col-md-5">
                                    <div class="card-image">
                                        <img class="img img-raised" src="@ViewBag.UploadLocation@blog["banner"]">
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <h3 class="card-title">
                                        <a href="/Magzines/@blog["guid"]">
                                            @blog["title"]
                                        </a>
                                    </h3>
                                    <div class="blog-detail">
                                        <p class="card-description blog">
                                            @Html.Raw(blog["text"].Substring(0, 300))
                                            &hellip;<a href="/Magzines/@blog["guid"]"> Read More </a>
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-md-5 visible-xs visible-sm">
                                    <div class="card-image">
                                        <img class="img img-raised" src="@ViewBag.UploadLocation@blog["banner"]">
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <h3 class="card-title">
                                        <a href="/Magzines/@blog["guid"]">
                                            @blog["title"]
                                        </a>
                                    </h3>
                                    <div class="blog-detail">
                                        <p class="card-description">
                                            @Html.Raw(blog["text"].Substring(0, 300))
                                            &hellip;<a href="/Magzines/@blog["guid"]"> Read More </a>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-5 visible-md visible-lg">
                                    <div class="card-image">
                                        <img class="img img-raised" src="@ViewBag.UploadLocation@blog["banner"]">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <br /><br />
                }
            </div>
        </div>
    </div>
    <div class="col-md-3 hide" style="box-shadow: -1px 0px 0px 0px #afacac;margin-bottom:3%;">
        <h2 class="card-title">
            Trending
            <i class="material-icons text-danger">trending_up</i>
        </h2>
        <div class="col-md-10 col-md-offset-1">
            <div class="card card-profile ">
                <div class="card-image" style="    background: transparent;    width: 110%;    margin-left: -5%;    margin-right: -5%;">
                    <a href="sections.html#pablo">
                        <img class="img" src="http://2mlyl2eanf41pq5h03csafz15gi.wpengine.netdna-cdn.com/wp-content/uploads/2016/02/jamaica_littlewaters_02-400x400.png" style="    background: transparent;    width: 145%;">
                    </a>
                </div>
                <h6 class="card-title">Building Dreams at Little Waters, Jamaica</h6>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="card card-profile ">
                <div class="card-image" style="    background: transparent;    width: 110%;    margin-left: -5%;    margin-right: -5%;">
                    <a href="sections.html#pablo">
                        <img class="img" src="http://2mlyl2eanf41pq5h03csafz15gi.wpengine.netdna-cdn.com/wp-content/uploads/2016/06/umbria_spinaltermine_07-400x400.jpg" style="    background: transparent;    width: 145%;">
                    </a>
                </div>
                <h6 class="card-title">Get The Look: Italian Dream Kitchen</h6>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="card card-profile ">
                <div class="card-image" style="    background: transparent;    width: 110%;    margin-left: -5%;    margin-right: -5%;">
                    <a href="sections.html#pablo">
                        <img class="img" src="http://2mlyl2eanf41pq5h03csafz15gi.wpengine.netdna-cdn.com/wp-content/uploads/2015/08/Cape-Town-Views-400x400.jpg" style="    background: transparent;    width: 145%;">
                    </a>
                </div>
                <h6 class="card-title">7 Reasons to Love Cape Town</h6>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="card card-profile ">
                <div class="card-image" style="    background: transparent;    width: 110%;    margin-left: -5%;    margin-right: -5%;">
                    <a href="sections.html#pablo">
                        <img class="img" src="http://2mlyl2eanf41pq5h03csafz15gi.wpengine.netdna-cdn.com/wp-content/uploads/2016/06/amalficoast_villaferida_01-400x400.jpg" style="    background: transparent;    width: 145%;">
                    </a>
                </div>
                <h6 class="card-title">Dream Come True: A Spectacular Home on the Amalfi Coast</h6>
            </div>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <div class="card card-profile ">
                <div class="card-image" style="    background: transparent;    width: 110%;    margin-left: -5%;    margin-right: -5%;">
                    <a href="sections.html#pablo">
                        <img class="img" src="http://2mlyl2eanf41pq5h03csafz15gi.wpengine.netdna-cdn.com/wp-content/uploads/2017/02/Maui-Beach-View-400x400.jpg" style="    background: transparent;    width: 145%;">
                    </a>
                </div>
                <h6 class="card-title">5 Must-Do Maui Adventures</h6>
            </div>
        </div>
    </div>
</div>
