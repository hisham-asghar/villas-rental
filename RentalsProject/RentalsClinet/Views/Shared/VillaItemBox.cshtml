@model CustomModels.PropertyModels.PropertyView
@{
    var property = Model;
}

<div class="col-xs-12 col-sm-6 col-md-4">
    <div class="card property_box" city="@property.CityGuid" link="@property.guid" price="$@property.night" title="@property.Name" longitude="@property.Logitude" latitude="@property.Latitude">
        <div class="card-actions hide pull-right" style="position: absolute; right: 5%; top: 5%; color: #555; z-index: 10;">
            <div class="stats" style="padding: 10px; border-radius: 500px; font-size: 32px; background: #ccc;">
                <i class="material-icons" style="font-size: 32px;">favorite</i>
            </div>
        </div>
        <div class="card-image" style="width: 100%; margin: 0;" onclick="location.href = '/@property.CityGuid/@property.guid'">
            <a href="/@property.CityGuid/@property.guid">
                <img class="img" src="@ViewBag.UploadLocation/@property.banner">
                <div class="card-title">
                    @property.Name
                </div>
            </a>
        </div>
        <div class="content" style="padding: 15px;">
            <h6 class="category text-muted" style="margin: 0; height: 5ch;">@property.SubName</h6>
            <h5 class="card-title" style="margin: 0;">
                <a href="/@property.CityGuid/@property.guid">
                    <i class="material-icons">location_on</i>
                    @property.CityName, @property.Country
                </a>
            </h5>
            <div class="card-description hide"></div>
            <div>
                <div class="footer" style="margin: 0 6%;border-top: 1px solid #eee;">
                    <div class="price">
                        <h4 style="margin: 0; font-weight: bold;">
                            $@property.night/night
                        </h4>
                    </div>
                    <div class="author" style="float: right; line-height: 30px; color: #999999;">
                        <a href="#" title="Maximum @property.Bedrooms Bedrooms" style="vertical-align:-10px;">
                            <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                <path fill="#000000" d="M19,7H11V14H3V5H1V20H3V17H21V20H23V11A4,4 0 0,0 19,7M7,13A3,3 0 0,0 10,10A3,3 0 0,0 7,7A3,3 0 0,0 4,10A3,3 0 0,0 7,13Z" />
                            </svg>
                            <span style="position:relative;bottom:5px;">@property.Bedrooms</span>
                        </a>
                        <a href="#" title="Maximum @property.Bathrooms Bathrooms" style="vertical-align:-10px;">
                            <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                <path fill="#000000" d="M5,2H19A2,2 0 0,1 21,4V20A2,2 0 0,1 19,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2M12,4A4,4 0 0,0 8,8H11.26L10.85,5.23L12.9,8H16A4,4 0 0,0 12,4M5,10V20H19V10H5Z" />
                            </svg>
                            <span style="position:relative;bottom:5px;">@property.Bathrooms</span>
                        </a>
                        <a href="#" title="Maximum @property.MaxGuests Guests" style="vertical-align:-10px;">
                            <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                <path fill="#000000" d="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M8,11A3,3 0 0,0 11,8A3,3 0 0,0 8,5A3,3 0 0,0 5,8A3,3 0 0,0 8,11M16,11A3,3 0 0,0 19,8A3,3 0 0,0 16,5A3,3 0 0,0 13,8A3,3 0 0,0 16,11Z" />
                            </svg>
                            <span style="position:relative;bottom:5px;">@property.MaxGuests</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
