<div class="cd-section col-md-5 col-md-offset-1" id="contactus" style="padding: 0;">
    <!--     *********    CONTACT US 1     *********      -->
    <div class="">
        <div class="container " style="width: 100%;">
            <form method="post" id="applicationForm">

                <div class="col-md-10 col-md-offset-1">
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="title text-center">Application Form</h3>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Your name and/or entity name</label>
                                <input type="text" name="name" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Your entity name</label>
                                <input type="text" name="entityName" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Email</label>
                                <input type="text" name="email" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Phone (Include Area Code)</label>
                                <input type="text" name="phone" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group" style="margin-top: 35px;padding-bottom: 0;">
                                <p>Your role</p>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group is-empty">
                                <select class="select form-control" name="role" placeholder="Your role">
                                    <option value="">Please select one</option>
                                    <option value="Homeowner">Homeowner</option>
                                    <option value="Property Manager">Property Manager</option>
                                    <option value="Realtor">Realtor</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group" style="margin-top: 35px;padding-bottom: 0;">
                                <p>Villa location: Country *</p>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group is-empty">
                                <input type="hidden" id="countryHidden" name="country" value="@ViewBag.Countries[0].Value" />
                                <select class="select form-control" id="countryCC" name="countryCC" placeholder="Villa location: Country *">
                                    @foreach (var c in ViewBag.Countries)
                                    {
                                        <option value="@c.Key">@c.Value</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group" style="margin-top: 35px;padding-bottom: 0;">
                                <p>Villa location: City/Town/Region *</p>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group is-empty" id="cityBoxDropdown">
                                <select class="select form-control" id="cityId" name="city" placeholder="Villa location: Country *">
                                    @foreach (var c in ViewBag.cities)
                                    {
                                        <option value="@c.Key">@c.Value</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group" style="margin-top: 35px;padding-bottom: 0;">
                                <p>How did you hear about us?</p>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group is-empty">
                                <select class="select form-control" name="source" placeholder="How did you hear about us?">
                                    <option value="">Please select one</option>
                                    <option value="I have travelled with The Maruca Group">I have travelled with The Maruca Group</option>
                                    <option value="I found your website searching online">I found your website searching online</option>
                                    <option value="I met a The Maruca Group Representative at an event">I met a The Maruca Group Representative at an event</option>
                                    <option value="I received an email campaign ">I received an email campaign </option>
                                    <option value="I received a card in the mail">I received a card in the mail</option>
                                    <option value="I saw you on social media (LinkedIn, FB, Pinterest, Twitter etc.)">I saw you on social media (LinkedIn, FB, Pinterest, Twitter etc.)</option>
                                    <option value="I saw you in a magazine or newspaper">I saw you in a magazine or newspaper</option>
                                    <option value="I was referred by another homeowner who works with The Maruca Group">I was referred by another homeowner who works with The Maruca Group</option>
                                    <option value="I was referred by a real estate agent">I was referred by a real estate agent</option>
                                    <option value="I was referred by my wealth manager">I was referred by my wealth manager</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Website or link to property photos*</label>
                                <input type="text" name="link" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">
                                    Tell us a little bit about what you're looking for...
                                </label>
                                <textarea class="form-control" name="message" rows="3"></textarea>
                                <span class="material-input"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="">
                                <p>Is this your primary residence ?</p>
                            </div>

                            <div class="radio">
                                <label>
                                    <input type="radio" name="primary_residence" value="yes" checked="true"><span class="circle"></span><span class="check"></span>
                                    Yes
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="primary_residence" value="no"><span class="circle"></span><span class="check"></span>
                                    No
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success">Submit Application</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!--     *********    END CONTACT US 1      *********      -->
</div>
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#countryCC").change(function () {
                $("#countryHidden").val($('#countryCC option[value='+$(this).val()+']').text());
                var geoid = $(this).val();
                var url = "http://api.geonames.org/childrenJSON?username=themarucagroup&formatted=true&geonameId=" +
                    geoid;
                var settings = {
                    url: url,
                    success: function(data) {
                        data = data.geonames;
                        var optionStr = "";
                        for (var city in data) {
                            if (data.hasOwnProperty(city)) {
                                var nameCity = data[city].name;
                                var optionCity = '<option value="' + nameCity + '">' + nameCity + '</option>';
                                optionStr += optionCity;
                            }
                        }
                        $("#cityId").next().remove();
                        //var optionsz = $("#cityId").html();
                        $("#cityBoxDropdown").html("");
                        var selectTag =
                            $(
                                '<select class="select form-control" id="cityId" name="cityId" placeholder="Villa location: Country *"></select>');
                        selectTag.html(optionStr);
                        $("#cityBoxDropdown").append(selectTag);
                        //    Activate bootstrap-select
                        $(".select").dropdown({ "dropdownClass": "dropdown-menu", "optionClass": "" });
                    }
                };
                $.ajax(settings);

            });
        });
    </script>
}
