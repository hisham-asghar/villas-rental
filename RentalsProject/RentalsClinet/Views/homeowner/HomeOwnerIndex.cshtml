@if (ViewBag.FAQs.Count > 0)
{
    
<div class="cd-section" style="background: rgba(238, 238, 238, 0.39);">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="margin-top: 10vh; margin-bottom: 5vh;">
                <h1 class="col-md-8 col-md-offset-2 title text-center">
                    FAQs
                </h1>
            </div>
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="margin-top: 12px;">
                @foreach (var f in ViewBag.FAQs)
                {
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id='@("heading" + f.faqId)'>
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href='@("#collapse" + f.faqId)' aria-expanded="false" aria-controls='@("collapse" + f.faqId)'>
                                <h4 class="panel-title" style="font-weight: bold;">
                                    @(f.Question.Contains("\n") ? f.Question.Replace("\n", "<br />") : f.Question)
                                    <i class="material-icons">keyboard_arrow_down</i>
                                </h4>
                            </a>
                        </div>
                        <div id='@("collapse" + f.faqId)' class="panel-collapse collapse" role="tabpanel" aria-labelledby='@("heading" + f.faqId)'>
                            <div class="panel-body">
                                @(Html.Raw(f.Answer.Contains("\n") ? f.Answer.Replace("\n", "<br />") : f.Answer))
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-8 col-md-offset-2 text-center" style="margin-top: 10vh; margin-bottom: 10vh;">
            <a href="#applicationForm" class="btn btn-success">Apply Now</a>
        </div>
    </div>
</div>
