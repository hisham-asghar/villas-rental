
@{
    ViewBag.Title = "Services";
}

<h2>
    Main Page Services Panel Settings
</h2>
<div class="col-md-12 card">
    
    <div class="card-content">

        <form method="post">

            <div class="col-md-12">
                <div class="title">
                    <h3>Box 1</h3>
                </div>
                <div class="form-group is-empty">
                    <input type="text" value="@ViewBag.service1H.MetaText" name="@ViewBag.service1H.MetaName" placeholder="Heading" class="form-control">
                </div>
                <div class="form-group is-empty">
                    <label class="control-label"> Content </label>
                    <textarea class="form-control" name="@ViewBag.service1B.MetaName" rows="5">
                        @ViewBag.service1B.MetaText
                    </textarea>
                </div>
            </div>

            <div class="col-md-12">
                <div class="title">
                    <h3>Box 2</h3>
                </div>
                <div class="form-group is-empty">
                    <input type="text" value="@ViewBag.service2H.MetaText" name="@ViewBag.service2H.MetaName" placeholder="Heading" class="form-control">
                </div>
                <div class="form-group  is-empty">
                    <label class="control-label">
                        Content
                    </label>
                    <textarea class="form-control" name="@ViewBag.service2B.MetaName" rows="5">
                        @ViewBag.service2B.MetaText
                    </textarea>
                </div>
            </div>

            <div class="col-md-12">
                <div class="title">
                    <h3>Box 3</h3>
                </div>
                <div class="form-group is-empty">
                    <input type="text" value="@ViewBag.service3H.MetaText" name="@ViewBag.service3H.MetaName" placeholder="Heading" class="form-control">
                </div>
                <div class="form-group  is-empty">
                    <label class="control-label">
                        Content
                    </label>
                    <textarea class="form-control" name="@ViewBag.service3B.MetaName" rows="5">
                        @ViewBag.service3B.MetaText                    
                    </textarea>
                </div>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-info">Update</button>
            </div>

        </form>

    </div>

</div>